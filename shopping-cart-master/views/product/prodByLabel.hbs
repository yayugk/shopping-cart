{{# each products }}
        <div class="col-xs-6">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3><a href="/product/{{this.id}}">{{ this.title }}</a></h3>
                        <p><a href="/product/label/{{this.label}}">{{this.label}}</a></p>
                        <div class="clearfix">
                            <div class="price pull-left">${{this.price}}</div>
                            <a href="/add-to-wishlist/{{this._id}}" class="btn btn-success pull-right" role="button">Add To Wishlist</a>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add To Cart</a>
                        </div>
                    </div>
                </div>
        </div>

{{/each}}